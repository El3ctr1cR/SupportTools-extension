{
  "manifest_version": 3,
  "name": "Support Tools",
  "version": "2.5.3",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "background": {
    "service_worker": "functions/incognitoRedirection.js"
  },
  "incognito": "split",
  "host_permissions": [
    "*://*.autotask.net/*"
  ],
  "action": {
    "default_popup": "popups/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.autotask.net/Autotask/Views/DispatcherWorkshop/DispatcherWorkshopView.aspx?MyCalendar=*"
      ],
      "js": [
        "functions/calendarChanger.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.autotask.net/Mvc/ServiceDesk*"
      ],
      "js": [
        "functions/templateManager.js",
        "functions/aiTaskHandler.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "*://*.autotask.net/Mvc/ServiceDesk/TicketDetail.mvc*"
      ],
      "js": ["functions/ticketHistoryWatcher.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://*.autotask.net/*"
      ],
      "js": ["functions/openIframe.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}