{
  "manifest_version": 3,
  "name": "Support Tools",
  "version": "1.9.0",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "functions/incognito.js"
  },
  "host_permissions": [
    "https://*.microsoft.com/*",
    "https://*.azure.com/*",
    "https://*.office.com/*",
    "https://*.microsoft365.com/*",
    "https://*.autotask.net/*"
  ],
  "action": {
    "default_popup": "popups/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.autotask.net/*"],
      "js": ["functions/templateManager.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popups/templateEditor.html",
        "popups/templateEditor.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}