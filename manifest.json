{
  "manifest_version": 3,
  "name": "Support Tools",
  "version": "2.3.1",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "background": {
    "service_worker": "functions/incognitoRedirection.js"
  },
  "incognito": "split",
  "host_permissions": [
    "*://*.autotask.net/*"
  ],
  "action": {
    "default_popup": "popups/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.autotask.net/*"
      ],
      "js": [
        "functions/templateManager.js",
        "functions/aiTaskHandler.js",
        "functions/calendarChanger.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
  {
    "resources": [
      "popups/autotask/templateEditor.html",
      "popups/autotask/templateEditor.js",
      "popups/autotask/ticketSummary.html",
      "popups/autotask/ticketSummary.js"
    ],
    "matches": [ "<all_urls>" ]
    }
  ]
}